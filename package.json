{
  "name": "@dojo/widgets",
  "version": "6.0.1-pre",
  "description": "Dojo Widgets",
  "private": true,
  "homepage": "https://dojo.io",
  "bugs": {
    "url": "https://github.com/dojo/widgets/issues"
  },
  "license": "BSD-3-Clause",
  "main": "src/main.tsx",
  "engines": {
    "npm": ">=3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dojo/widgets.git"
  },
  "scripts": {
    "dev": "dojo build app -m dev -w -s",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "copy:test": "cpx \"src/**/{*.html,example.css}\" dist/dev/src",
    "dojo-package": "dojo-package",
    "dojo-release": "dojo-release",
    "version:update": "shx cp package.json package.json.bk && node scripts/version",
    "version:reset": "shx mv package.json.bk package.json",
    "intern": "intern",
    "test": "run-s clean build:test intern",
    "build:ce": "dojo build widget && shx cp -r output/dist dist/umd/src/",
    "build:docs": "dojo build app -f docs=true",
    "build:docs:dev": "dojo build app -m dev -w -s -f docs=true",
    "build:lib": "dojo build widget -t lib && shx cp -r output/dist dist/esm/src",
    "build:lib:legacy": "dojo build widget -t lib -l && shx cp -r output/dist dist/umd/src",
    "build:test": "dojo build widget -t lib -l && shx cp -r output/dist dist/dev/src && tsc && npm run copy:test && node scripts/umd",
    "build": "npm run clean && npm run build:lib && npm run build:lib:legacy && npm run build:ce",
    "clean": "shx rm -rf dist && shx mkdir dist && shx mkdir dist/umd && shx mkdir dist/esm && shx mkdir dist/dev",
    "release": "run-s \"version:update -- {@}\" build version:reset dojo-package \"dojo-release -- {@}\" --",
    "uploadCoverage": "codecov --file=coverage/coverage.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "peerDependencies": {
    "@dojo/framework": "7.0.0-alpha.2"
  },
  "devDependencies": {
    "@dojo/cli": "7.0.0-alpha.1",
    "@dojo/cli-build-app": "7.0.0-alpha.2",
    "@dojo/cli-build-widget": "7.0.0-alpha.1",
    "@dojo/cli-test-intern": "7.0.0-alpha.1",
    "@dojo/framework": "7.0.0-alpha.2",
    "@dojo/loader": "^2.0.0",
    "@dojo/scripts": "^4.0.2",
    "@dojo/themes": "^6.0.0",
    "@theintern/a11y": "~0.2.0",
    "@types/execa": "^0.8.1",
    "@types/glob": "5.0.36",
    "@types/grunt": "0.4.*",
    "@types/jsdom": "2.0.*",
    "@types/node": "~9.6.5",
    "@types/sinon": "^4.1.3",
    "canonical-path": "^1.0.0",
    "cldr-data": "32.0.1",
    "codecov": "3.5.0",
    "cpx": "1.5.0",
    "cross-spawn": "6.0.5",
    "execa": "^0.9.0",
    "glob": "7.1.4",
    "husky": "2.2.0",
    "jsdom": "^9.5.0",
    "lint-staged": "8.1.6",
    "npm-run-all": "4.1.5",
    "pkg-dir": "^2.0.0",
    "postcss": "^7.0.21",
    "prettier": "1.17.0",
    "prismjs": "1.17.1",
    "rehype-stringify": "6.0.0",
    "remark-parse": "7.0.1",
    "remark-rehype": "5.0.0",
    "shx": "^0.2.2",
    "sinon": "^4.1.3",
    "ts-morph": "4.2.0",
    "ts-node": "^3.3.0",
    "typescript": "~3.4.5",
    "unified": "8.4.1"
  },
  "dependencies": {
    "tslib": "~1.9.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 100,
    "arrowParens": "always"
  }
}
