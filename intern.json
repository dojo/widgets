{
	"capabilities+": {
		"project": "Dojo 2",
		"name": "@dojo/widgets",
		"browserstack.debug": false
	},

	"environments": [
		{ "browserName": "node" }
	],

	"suites": [
		"./_build/common/tests/unit/all.js"
	],

	"functionalSuites": [
		"./_build/common/tests/functional/all.js"
	],

	"browser": {
		"loader": {
			"script": "./node_modules/grunt-dojo2/lib/intern/internLoader.js",
			"options": {
				"packages": [
					{ "name": "src", "location": "_build" },
					{ "name": "maquette", "location": "node_modules/maquette/dist", "main": "maquette" },
					{ "name": "cldrjs", "location": "node_modules/cldrjs" },
					{ "name": "globalize", "location": "node_modules/globalize", "main": "dist/globalize" },
					{ "name": "css-select-umd", "location": "node_modules/css-select-umd", "main": "dist/index.js" },
					{ "name": "diff", "location": "node_modules/diff", "main": "dist/diff.js" }
				],
				"map": {
					"globalize": {
						"cldr": "cldrjs/dist/cldr",
						"cldr/event": "cldrjs/dist/cldr/event",
						"cldr/supplemental": "cldrjs/dist/cldr/supplemental",
						"cldr/unresolved": "cldrjs/dist/cldr/unresolved"
					}
				}
			}
		}
	},

	"node": {
		"plugins": [
			"_build/common/tests/node-css-plugin.js"
		]
	},

	"coverage": [
		"./_build/**/*.js",
		"!./_build/**/tests/**/*",
		"!./_build/**/styles/**/*",
		"!./_build/**/theme/**/*",
		"!./_build/**/themes/**/*",
		"!./_build/**/example/**/*",
		"!./_build/**/*Element.js"
	],

	"configs": {
		"browserstack": {
			"tunnel": "browserstack",

			"environments+": [
				{ "browserName": "internet explorer", "version": "11" },
				{ "browserName": "edge" },
				{ "browserName": "firefox", "os": "Windows", "os_version": "10" },
				{ "browserName": "chrome", "os": "Windows", "os_version": "10" },
				{ "browserName": "safari", "version": "9.1", "platform": "MAC" },
				{ "browserName": "iPhone", "version": "9.1" }
			],

			"maxConcurrency": 5
		},

		"local": {
			"tunnel": "selenium",
			"tunnelOptions": {
				"hostname": "localhost",
				"port": 4444
			},

			"environments+": [
				{ "browserName": "chrome" }
			]
		},

		"headless": {
			"tunnel": "selenium",
			"tunnelOptions": {
				"hostname": "localhost",
				"port": 4444
			},

			"environments+": [
				{ "browserName": "chrome", "chromeOptions": { "args": ["headless", "disable-gpu", "no-sandbox", "window-size=1280,1024"] } }
			]
		},

		"saucelabs": {
			"tunnel": "saucelabs",
			"tunnelOptions": {},

			"defaultTimeout": 10000,
			"environments+": [
				{ "browserName": "internet explorer", "version": [ "11.0" ], "platform": "Windows 7" },
				{ "browserName": "firefox", "version": "43", "platform": "Windows 10" },
				{ "browserName": "chrome", "platform": "Windows 10" },
				{ "browserName": "chrome", "platform": "Windows 10" },
				{ "browserName": "safari", "version": "9.0", "platform": "OS X 10.11" },
				{ "browserName": "iphone", "version": "9.3" }
			],
			"maxConcurrency": 4
		}
	}
}
